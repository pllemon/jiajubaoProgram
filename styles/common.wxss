.button-plain{
  background: none;
  border: 1px solid #4d5ef4;
  color: #4d5ef4;
  margin: 0;
}


.tab-list{
  display: flex;
  height: 100rpx;
}
.tab-list .tab-item{
  flex: 1;
  line-height: 100rpx;
  text-align: center;
}

/* 标准样式定义 */
.m20{
  margin-bottom: 20rpx;
}
.p30{
  padding: 30rpx;
}
.f18{
  font-size: 18px;
}
.f17{
  font-size: 17px;
}

/* 满页布局 */
.full-layout{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}


/* 通用section */
.common-section{
  padding: 30rpx;
  background: #fff; 
}
.common-section .title{
  font-size: 18px;
  margin-bottom: 10rpx;
}
.common-section .mes{
  font-size: 16px;
  color: #888;
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}
.common-section .mes .iconfont{
  margin-right: 10rpx;
}
.common-section .mes .content{
  flex: 1;
}