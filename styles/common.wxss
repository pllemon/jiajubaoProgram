
.button-plain{
  background: none;
  border: 1px solid #4d5ef4;
  color: #4d5ef4;
  margin: 0;
}

.no-res{
  padding: 100rpx 0;
  text-align: center;
  color: #888;
}


.tab-list{
  display: flex;
  height: 100rpx;
}
.tab-list .tab-item{
  flex: 1;
  line-height: 100rpx;
  text-align: center;
}

/* 标准样式定义 */
.m20{
  margin-bottom: 20rpx;
}
.p30{
  padding: 30rpx;
}
.f18{
  font-size: 18px;
}
.f17{
  font-size: 17px;
}
.fc8{
  color: #888;
}
.fcBlue{
  color: #4d5ef4;
}

/* 满页布局 */
.full-layout{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}


/* 通用section */
.common-section{
  padding: 30rpx;
  background: #fff; 
}
.common-section .common-title{
  color: #4d5ef4;
  padding-left: 30rpx;
  position: relative;
  margin-bottom: 30rpx;
}
.common-section .common-title:after{
  content: '';
  position: absolute;
  width: 4px;
  height: 36rpx;
  left: 0;
  top: 5rpx;
  border-radius: 2px;
  background: #4d5ef4;
}
.common-section .title{
  font-size: 18px;
  margin-bottom: 10rpx;
  color: #353535;
}
.common-section .mes{
  color: #888;
  display: flex;
  align-items: center;
}
.common-section .mes .iconfont{
  margin-right: 10rpx;
}
.common-section .mes .content{
  flex: 1;
}


.common-list{
  padding: 20rpx 0;
  flex: 1;
}
.common-card{
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  margin-top: 0;
  border-radius: 20rpx;
  overflow: hidden;
  font-size: 16px;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.08);
}


.action-list{
	margin-bottom: 30rpx;
}
.action-item{
	display: flex;
	font-size: 17px;
}
.action-item icon{
	margin-right: 20rpx;
	font-size: 20px;
	top: -4px;
}


.blue-header{
	height: 380rpx;
	background: -webkit-linear-gradient(#7889f1, #4d5ef4);
	padding: 180rpx 40rpx 0;
	color: #fff;
	display: flex;
  align-items: center;
  color: #fff;
}