<view class="full-layout">
  <view class="flex-center-start address">
    <icon class="iconfont iconicon_GPS"></icon>
    <view class="flex1">{{addressInfo.address}}</view>
  </view>

  <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>

  <view class="nav-list flex1">
    <block wx:for="{{list}}" wx:key="id">
      <view class="nav-type">
        <navigator url="{{item.url}}" class="flex-column-center">
          <image src="{{item.icon}}"/>
          <view>{{item.text}}</view>
        </navigator>
      </view>
    </block>
  </view>

  <view style="height: 50rpx"></view>

  <navigation current-idx="0"></navigation>
</view>