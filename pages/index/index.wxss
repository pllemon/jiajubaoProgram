page{
  background: #fff;
}

.address{
  padding: 20rpx 30rpx;
}
.address .iconfont{
  margin-right: 10rpx;
}

.nav-list{
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}
.nav-type{
  width: 50%;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx;
}
.nav-type .nav-single{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  color: #fff;
}

.nav-type:nth-of-type(1) .nav-single{
	background: -webkit-linear-gradient(45deg, #eb361e, #ee331b);
}
.nav-type:nth-of-type(4) .nav-single{
	background: -webkit-linear-gradient(135deg, #cc5daf, #c95bac);
}
.nav-type:nth-of-type(3) .nav-single{
	background: -webkit-linear-gradient(-135deg, #66abd8, #61a6d3);
}
.nav-type:nth-of-type(2) .nav-single{
	background: -webkit-linear-gradient(-45deg, #68bc62, #69bd62);
}
.nav-type image{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.nav-section{
  display: flex;
  flex: 1;
  padding: 6rpx;
}
.nav-section view{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.nav-section view .link {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
  color: #fff;
  margin: 6rpx;
  border-radius: 10rpx;
}
.nav-section view .link image{
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 20rpx;
  display: block;
}