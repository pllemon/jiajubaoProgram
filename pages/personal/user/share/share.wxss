page{
    background: #fff;
}
.share-view{
    padding: 30rpx;
}
.share-view image{
    width: 100%;
    height: 100%;
}

.share-btn icon{
    font-size: 50rpx;
}


.btns{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 30rpx;
}
.btns image{
    width: 40rpx;
    height: 40rpx;
}
.share-btn{
    display: flex;
    border: 1px solid #ff5643;
    width: 380rpx;
    height: 90rpx;
    border-radius: 20rpx;
    color: #ff5643;
    padding: 0;
    margin: 0;
    background: #fff;
}
.down-btn{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    background: -webkit-linear-gradient(45deg, #ff5643, #fd5240);
    font-size: 40rpx;
    color: #fff;
    margin-top: 0;
    margin-right: 40rpx;
}