page{
  background: #fff;
}

.blue-header{
  padding-top: 120rpx;
}

.total{
  font-size: 40px;
  margin-top: 6rpx;
}

.btn-list{
  background: #f8f8f8;
  padding: 30rpx;
  display: flex;
}
.btn-list button{
  flex: 1;
  margin: 0;
}

.record-single{
  padding: 30rpx;
  border-bottom: 1px solid #f2f2f2;
  font-size: 16px;
}

.record-single .time{
  font-size: 12px;
  color: #888;
}

.record-single .points{
  font-size: 20px;
  color: #4d5ef4;
}

.explain-message{
  max-height: 60vh;
  overflow: auto;
  padding: 30rpx;
  line-height: 1.8;
}
.explain-message .title{
  font-size: 16px;
  font-weight: bold;
}
.explain-message .content{
  margin-bottom: 30rpx;
}