<form bindsubmit="formSubmit" class="form" style="padding-bottom: 50rpx">
    <van-cell-group title="基础资料">
        <van-field
            input-class="input-field"
            value="{{ form.name }}"
            required
            label="店铺名称"
            placeholder="请输入"
            title-width="100px"
            data-name="name"
            bind:change="onChange"
        />
        <van-field
            value="{{ form.phone }}"
            required
            label="联系电话"
            placeholder="请输入"
            title-width="100px"
            data-name="phone"
            type="number"
            bind:change="onChange"
        />
        <van-cell title="店铺地址" title-width="100px" required>
            <block wx:if="{{addressInfo}}">
                <view class="flex" style="color:#323233;align-items:flex-start" bindtap="chooseAddress">
                    <text class="flex1">{{addressInfo.address}}</text>
                    <icon class="address-icon iconfont iconicon_next_arrow"></icon>
                </view>
                <input type="text" style="color:#323233;margin-top:10px" name="address" placeholder="可补充具体的门牌号" value=""/>
            </block>
            <block wx:if="{{!addressInfo}}">
                <button size="mini" class="address-btn" open-type="openSetting" bindopensetting="onOpenSetting">
                    点击定位
                </button>
            </block>
        </van-cell>
    </van-cell-group>
    <van-cell-group title="图片资料" class="upload-content">
        <van-cell title="门面图片" title-width="100px" required>
            <van-uploader data-type="shopimg" file-list="{{ shopimg }}" max-count="1" bind:after-read="afterRead" bind:delete="deleteImage" /> 
        </van-cell>
        <van-cell title="宣传图片" title-width="100px" required>
            <van-uploader data-type="goodsimg" file-list="{{ goodsimg }}" max-count="1" bind:after-read="afterRead" bind:delete="deleteImage" />
        </van-cell>
        <van-cell title="营业执照" title-width="100px" required>
            <van-uploader data-type="businessimg" file-list="{{ businessimg }}" max-count="1" bind:after-read="afterRead" bind:delete="deleteImage" />
        </van-cell>
        <!-- <van-cell title="分享图片" title-width="100px" required>
            <van-uploader data-type="sharewximg" file-list="{{ sharewximg }}" max-count="1" bind:after-read="afterRead" bind:delete="deleteImage" />
        </van-cell> -->
    </van-cell-group>

    <checkbox-group class="agree flex-center-start" bindchange="checkboxChange">
        <checkbox value="1" checked="{{false}}" color="#ff5643"/>
        <view>我已认真阅读并同意<text class="text" bindtap="readDoc">商家入驻协议书</text></view>
    </checkbox-group>

    <button form-type="submit" class="main-btn">提交</button>
</form>