<form bindsubmit="formSubmit" class="form">
    <view class="form-section">
        <view class="form-title">基本资料</view>
        <view class="form-item">
            <label><text class="required">*</text>姓名</label>
            <view class="form-content">
                <input name="name" placeholder="请输入" value=""/>
            </view>
        </view>
        <view class="form-item">
            <label><text class="required">*</text>身份证号</label>
            <view class="form-content">
                <input type="idcard" name="sfz" placeholder="请输入" value=""/>
            </view>
        </view>
        <view class="form-item">
            <label><text class="required">*</text>手机号</label>
            <view class="form-content">
                <input type="number" name="phone" placeholder="请输入" value=""/>
            </view>
        </view>
        <view class="form-item">
            <label><text class="required">*</text>入行年份</label>
            <view class="form-content">
                <input type="number" name="enter_time" placeholder="请输入" value=""/>
            </view>
        </view>
        <view class="form-item">
            <label><text class="required">*</text>联系地址</label>
            <view class="form-content">
                <block wx:if="{{addressInfo}}">
                    <view class="flex address-content"  bindtap="chooseAddress">
                        <text class="flex1">{{addressInfo.address}}</text>
                        <icon class="address-icon iconfont iconicon_next_arrow"></icon>
                    </view>
                    <input name="address" placeholder="可补充具体的门牌号" value=""/>
                </block>
                <block wx:if="{{!addressInfo}}">
                    <button class="flex-center-end picker address-btn" open-type="openSetting" bindopensetting="onOpenSetting">
                        <text>点击定位</text>
                        <icon class="address-icon iconfont iconicon_next_arrow"></icon>
                    </button>
                </block>
            </view>
        </view>
        <view class="form-item">
            <label>个人简介</label>
            <view class="form-content">
                <textarea name="desc" auto-height placeholder="请输入"/>
            </view>
        </view>
    </view>
    <view class="form-section">
        <view class="form-title">身份证照片</view>
        <view class="form-item upload">
            <label><text class="required">*</text>手持身份证</label>
            <view class="form-content">
                <upload name="shopimg" imgArr="{{shopimg}}" length="1" bindupdate="updateImg"></upload>
            </view>
        </view>
        <view class="form-item upload">
            <label><text class="required">*</text>身份证正面</label>
            <view class="form-content">
                <upload name="goodsimg" imgArr="{{goodsimg}}" length="1" bindupdate="updateImg"></upload>
            </view>
        </view>
        <view class="form-item upload">
            <label><text class="required">*</text>身份证反面</label>
            <view class="form-content" style="width:520rpx">
                <upload name="businessimg" imgArr="{{businessimg}}" length="1" bindupdate="updateImg"></upload>
            </view>
        </view>
    </view>

    <checkbox-group class="agree flex-center-start"  bindchange="checkboxChange">
        <checkbox value="1" checked="{{false}}" color="#4d5ef4"/>
        <view>我已认真阅读并同意<text class="text" bindtap="readDoc">师傅入驻协议书</text></view>
    </checkbox-group>

    <button form-type="submit" class="main-btn">提交</button>

    <view class="form-tips">
        <view>申请说明：</view>
        <view>1. 提交申请前请认真阅读师傅入驻协议书，同意请勾选，有疑问可联系客服</view>
        <view>2. 提交申请后后台会进行资料审核，请耐心等待</view>
        <view>3. 感谢您对‘多师傅’的支持，欢迎您的入驻</view>
    </view>
    
    <!-- <location show="{{ showLocationDialog }}" bindupDateLocation="upDateLocation"></location> -->
</form>