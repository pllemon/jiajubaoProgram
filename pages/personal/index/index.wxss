.personal-mes{
	height: 440rpx;
	background: -webkit-linear-gradient(#7889f1, #4d5ef4);
	/* background: -webkit-linear-gradient( #f85032, #e73827); */
	padding: 200rpx 40rpx 0;
	color: #fff;
	display: flex;
	align-items: center;
}
.personal-img{
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 20rpx;
}
.personal-name{
	font-size: 22px;
}

.order-status{
    display: flex;
    margin-bottom: 30rpx;
    background: #fff;
}
.order-status view{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 13px;
    padding: 20rpx 0;
}
.order-status .num{
    font-size: 22px;
    margin-bottom: 10rpx;
}

.gd-tabs{
	margin-bottom: 30rpx;
}

.action-list{
	margin-bottom: 30rpx;
}
.action-item{
	display: flex;
	font-size: 17px;
}
.action-item icon{
	margin-right: 20rpx;
	font-size: 20px;
	top: -4px;
}
