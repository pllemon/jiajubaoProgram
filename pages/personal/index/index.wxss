.personal-mes{
	height: 440rpx;
	background: -webkit-linear-gradient(#7889f1, #4d5ef4);
	/* background: -webkit-linear-gradient( #f85032, #e73827); */
	padding: 200rpx 40rpx 0;
	color: #fff;
	display: flex;
	align-items: center;
}
.personal-img{
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	overflow: hidden;
	margin-right: 20rpx;
}
.personal-name{
	font-size: 42rpx;
}


.identity-list{
	display: flex;
	background: #fff;
	margin-bottom: 30rpx;
}
.identity-list .single{
	flex: 1;
	text-align: center;
	padding: 20rpx 0;
}
.identity-list .active{
	color: #4c5ce3;
	border-bottom: 2px solid #4c5ce3;
	display: flex;
	align-items: center;
	justify-content: center;
}
.identity-list .active .icon{
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}


.action-list{
  margin-bottom: 30rpx;
}

.single{
  border-bottom: 1px solid #f2f2f2;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}
.single image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.single .icon-right{
  width: 30rpx;
  height: 30rpx;
  margin-right: 0;
}
