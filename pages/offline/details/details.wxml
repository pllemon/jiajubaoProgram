<view wx:if="{{finish}}">
    <view class="blue-header">
      <view class="mes">
        <gdImage wx:if="{{personType == 2}}" src="{{ orderMes.userheaderurl }}" class="peo-img"></gdImage>
        <gdImage wx:if="{{personType == 0}}" src="{{ orderMes.shopimg }}" class="bussiness-img"></gdImage>
        <view style="font-size: 14px;margin-top:10rpx">{{personType == 2?orderMes.user_name:orderMes.business_name}}</view>
        <view style="font-size: 30px;margin-top: 12rpx">{{personType == 2?'+':'-'}}{{orderMes.money}}</view>
      </view>
    </view>
  
    <!-- 订单信息 -->
    <view class="common-section">
      <view class="title">订单信息</view>
      <view class="message">
        <view>
          <text>订单编号:</text>
          <text>{{orderMes.order_sn}}</text>
        </view>
        <view>
          <text>订单状态:</text>
          <text wx:if="{{orderMes.status == 1 && orderMes.pay_status == 0}}">待商家接单</text>
          <text wx:if="{{orderMes.status == 1 && orderMes.pay_status == 1}}">已完成</text>
          <text wx:if="{{orderMes.status == 2 }}">已取消</text>
        </view>
        <view>
          <text>下单时间:</text>
          <text>{{orderMes.creat_time}}</text>
        </view>
        <block wx:if="{{personType == 0}}">
          <view>
            <text>下单店铺:</text>
            <text>{{orderMes.business_name}}</text>
          </view>
          <view>
            <text>店铺电话:</text>
            <text>{{orderMes.business_phone}}{{orderMes.business_phone}}</text>
          </view>
          <view>
            <text>店铺地址:</text>
            <text>{{orderMes.business_address}}</text>
          </view>
        </block>
        <block wx:if="{{personType == 2}}">
          <view>
            <text>消费用户:</text>
            <text>{{orderMes.user_name}}</text>
          </view>
          <view>
            <text>用户电话:</text>
            <text>{{orderMes.user_phone}}</text>
          </view>
        </block>
        <view>
          <text>消费金额:</text>
          <text>{{orderMes.money}} 元</text>
        </view>
        <view>
          <text>{{personType == 0 ? '积分抵扣':'用户积分抵扣'}}</text>
          <text>-{{orderMes.integral}} 元</text>
        </view>
        <view>
          <text>线下支付金额:</text>
          <text>{{orderMes.money - orderMes.integral}} 元</text>
        </view>
        <block wx:if="{{personType == 2}}">
          <view>
            <text>应付平台费:</text>
            <text>{{orderMes.pay_money}} 元</text>
          </view>
          <view wx:if="{{orderMes.pay_status == 1}}">
            <text>积分抵扣平台费:</text>
            <text>{{orderMes.integral}} 元</text>
          </view>
          <view wx:if="{{orderMes.pay_status == 1}}">
            <text>实付平台费:</text>
            <text>{{orderMes.pay_money - orderMes.integral}} 元</text>
          </view>
        </block>
        <view wx:if="{{orderMes.pay_status == 1}}">
          <text>完成时间:</text>
          <text>{{orderMes.pay_time}} 元</text>
        </view>
      </view>
    </view>

    <view style="height: 130rpx" wx:if="{{orderStatus.showAction}}"></view>

    <!-- 操作按钮 -->
    <view class="main-action flex-center-between" wx:if="{{personType == 2 && orderMes.status == 1 && orderMes.pay_status == 0}}">
      <!-- <view class="flex-center service">
        <icon class="iconfont iconkefu"></icon>
        <text>客服</text>
      </view> -->
      <button bindtap="cancelOrder" class="main-btn flex1 plain">取消订单</button>
      <button bindtap="confirmOrder" class="main-btn flex1" style="margin-left: 10rpx">确认订单</button>
    </view>
</view>
