.blue-header{
    font-size: 13px;
    padding-top: 140rpx;
    height: 480rpx;
}
.blue-header .mes{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.blue-header .mes .peo-img{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}
.blue-header .mes .bussiness-img{
    width: 240rpx;
    height: 120rpx;
    border-radius: 4rpx;
    overflow: hidden;
}

.main-action{
    padding: 20rpx 30rpx;
    background: #f8f8f8;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
.main-action .main-btn{
    margin: 0;
}
.main-action .service{
    margin-right: 30rpx;
    color: #4d5ef4;
}
.main-action .service .iconfont{
    font-size: 26px;
    position: relative;
    top: 1rpx;
    margin-right: 2px;
}


.main-btn{
    margin: 50rpx 0rpx;
    margin-bottom: 10rpx;
}

.message view{
    display: flex;
    align-content: center;
    justify-content: space-between;
    margin-bottom: 10rpx;
    color: #888;
}


.concat{
    margin-top: 30rpx;
    color: #888;
}


.personal-img{
    margin-right: 20rpx;
}



.money{
    font-size: 22px;
    color:#4d5ef4;
    font-weight: 500;
}

