<view class="full-layout">
  <common-scroll
    id="list"
    class="scroll-view"
    request-url="{{requestUrl}}"
    query="{{query}}"
    auto="{{false}}"
    bind:change = "changeList"
  >
    <view class="common-list">
      <block wx:for="{{list}}" wx:key="index" >
        <navigator class="offline-single" url="/pages/offline/details/details?id={{item.id}}&personType={{personType}}">
          <view class="flex-center-between">
            <view class="flex-center-start">
              <gdImage wx:if="{{personType == 2}}" src="{{ item.headerurl }}" class="peo-img"></gdImage>
              <gdImage wx:if="{{personType == 0}}" src="{{ item.shopimg }}" class="bussiness-img"></gdImage>
              <text wx:if="{{personType == 2}}">{{item.user_name}}</text>
              <text wx:if="{{personType == 0}}">{{item.business_name}}</text>
            </view>
            <text class="status" wx:if="{{item.status == 1 && item.pay_status == 0}}">待商家接单</text>
            <text class="status" wx:if="{{item.status == 1 && item.pay_status == 1}}">已完成</text>
            <text class="status" wx:if="{{item.status == 2 }}">已取消</text>
          </view>
          <view style="margin: 30rpx 0">
            <view wx:for="{{item.goodslist}}">
              <view wx:for="{{list}}" wx:key="index" wx:for-item="item2" class="goods-single">
                <gdImage src="{{ item2.goods_image }}" class="goods-image"></gdImage>
                <view class="flex1">
                  <view class="name">{{item2.goods_name}}</view>
                  <view class="flex-center-between">
                    <text>￥{{item2.price}}</text>
                    <text>数量：{{item2.number}}</text>
                  </view>
                </view>
              </view>
            </view>
          </view>
          <view class="flex-center-end">合计：￥{{item.money}}，积分抵扣：￥{{item.jf}}</view>
        </navigator>
      </block>
    </view>
  </common-scroll>
</view>
