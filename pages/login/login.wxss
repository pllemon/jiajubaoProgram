page{
  background: #fff;
}

.title{
  color: #ff5643;
  margin: 30rpx;
  text-align: center;
  font-size: 26px;
}

.personal{
  margin-bottom: 30rpx;
}
.personal image{
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.section{
  padding: 0rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  align-items: center;
  color: #333;
}
.section input{
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  flex: 1;
  font-size: 16px;
}
.section .iconfont{
  font-size: 22px;
  top: -2px;
}
.form-tips{
  margin: 30rpx;
  font-size: 16px;
  color: #666;
}

form{
  margin: 30rpx 30rpx;
  display: block;
  background: #fff;
  padding: 30rpx 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border-radius: 20rpx;
}

.form-tips{
  margin: 0;
  padding: 0 30rpx;
}

.main-btn{
  margin: 40rpx 20rpx;
}

.bg{
  width: 100%;
  height: 220rpx;
}

.logo{
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}

.header{
  position: absolute;
  top: 40rpx;
  left: 80rpx;
  color: #fff;
  font-size: 14px;
}
.header .name{
  font-size: 24px;
  font-weight: bold;
}