.title{
  color: #4d5ef4;
  margin: 30rpx;
  text-align: center;
  font-size: 26px;
}

.personal{
  margin-bottom: 30rpx;
}
.personal image{
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.section{
  padding: 10rpx 30rpx;
  background: #fff;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  align-items: center;
}
.section input{
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  flex: 1;
  font-size: 18px;
}
.section .iconfont{
  font-size: 22px;
  top: -2px;
}
.form-tips{
  margin: 30rpx;
  font-size: 16px;
  color: #4c5ce3;
}

form{
  margin: 30rpx;
  display: block;
  background: #fff;
  padding: 50rpx 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.form-tips{
  margin: 0;
  padding: 0;
}