<view class="full-layout">
  <header title="案例广场" area bind:updateArea="updateArea"></header>

  <common-scroll
    id="list"
    class="scroll-view"
    request-url="/ordershowlist"
    query="{{query}}"
    auto="{{false}}"
    bind:change = "changeList"
  >
    <ad-swiper pos="2"></ad-swiper>

    <view>
      <view wx:for="{{list}}" wx:key="index" class="show-single">
        <view class="img-list">
          <gdImage src="{{ item.imgurl1 }}" preview label2="开工图"></gdImage>
          <gdImage src="{{ item.imgurl3 }}" preview label2="竣工图"></gdImage>
        </view>
        <view class="show-dec">
          <view>工号: 072012234</view>
          <view class="rate">
            <image src="/image/icon/start.svg" />
            <image src="/image/icon/start.svg" />
            <image src="/image/icon/start.svg" />
            <image src="/image/icon/start.svg" />
            <image src="/image/icon/start.svg" />
          </view>
          <view>广东江门</view>
        </view>
      </view>
    </view>
  </common-scroll>

  <navigation current-idx="-1"></navigation>
</view>
