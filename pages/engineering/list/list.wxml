<view class="full-layout">
  <van-search
    value="{{ searchValue }}"
    placeholder="请输入关键词"
    use-action-slot
    bind:search="onSearch"
  />

  <scroll-content 
    class="scroll-view"
    is-loadMore = "{{isLoadMore}}"
    is-refresh = "{{isRefresh}}"
    page = "{{page}}"
    last-page = "{{lastPage}}"
    bind:change = "changeList"
  >
    <view class="common-list">
      <block wx:for="{{list}}" wx:key="index">
        <navigator class="common-card" url="/pages/engineering/details/details?id={{item.id}}">
          <view class="show-single">
            <view class="show-title">{{ item.title }}</view>
            <view class="show-mes">
              <view>{{ item.time }}</view>
              <view class="master" wx:if="{{ item.type == 1 }}">
                <gdImage src="{{ item.cm_headerurl }}" class="personal-img"></gdImage>
                <text>{{ item.cm_name }}</text>
              </view>
            </view>
            <view class="show-dec">{{ item.dec }}</view>
            <view class="img-list">
              <gdImage wx:if="{{item.imgurl1}}" src="{{ item.imgurl1 }}"></gdImage>
              <gdImage wx:if="{{item.imgurl2}}" src="{{ item.imgurl2 }}"></gdImage>
              <gdImage wx:if="{{item.imgurl3}}" src="{{ item.imgurl3 }}"></gdImage>
              <gdImage wx:if="{{item.imgurl4}}" src="{{ item.imgurl4 }}"></gdImage>
            </view>
          </view>
        </navigator>
      </block>
    </view>
  </scroll-content>
</view>
