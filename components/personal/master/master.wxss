@import '/styles/iconfont.wxss';

.img-list{
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
    padding: 20rpx 0;
	color: #666;
}
.img-list .single-image{
    width: 150rpx;
    height: 150rpx;
	margin-left: 20rpx;
	position: relative;
	margin-bottom: 20rpx;
}
.img-list .single-image image{
	width: 100%;
	height: 100%;
}
.delete{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	background: rgba(0,0,0,0.5);
	color: #fff;
	text-align: center;
}
.add{
	background: #f8f8f8;
	width: 100%;
	height: 100%;
    font-size: 14px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}
.add .iconicon_roundadd{
    font-size: 22px;
}
