@import '/styles/iconfont.wxss';

scroll-view{
    height: 100%;
    box-sizing: border-box;
    position: relative;
}
.scroll-tips{
    background: #f8f8f8;
    padding: 30rpx;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
van-loading{
    margin-right: 20rpx;
}
van-icon{
    margin-right: 20rpx;
}

.go-top{
    position: absolute;
    bottom: 60rpx;
    right: 40rpx;
    opacity: 0.9;
    box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.2);
    background: #fff;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 30px;
    z-index: 99;
    color: #d82930;
}

.empty{
    display: flex;
    align-items: center;
    flex-direction: column;
    color: #868686;
}
.empty image{
    width: 140rpx;
    height: 140rpx;
    margin-bottom: 20px;
    margin-top: 200rpx;
}