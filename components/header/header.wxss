@import '../../styles/iconfont.wxss';
@import '../../styles/iconfont2.wxss';

.status{
	background: #fff;
}
.navbar{
    font-family: "PingFang SC","微软雅黑","Helvetica Neue",Helvetica,"Hiragino Sans GB","Microsoft YaHei",Arial,sans-serif;
	background: #fff;
	display: flex;
	align-items: center;
	font-size: 16px;
	position: relative;
	padding: 0 30rpx;
}
.action{
	display: flex;
	height: 100%;
	align-items: center;
}
.icon{
	height: 100%;
	width: 30px;
	display: flex;
	align-items: center;
	justify-content: center;
}
.icon image{
	width: 36rpx;
	height: 36rpx;
}
.picker{
	font-size: 14px;
	margin-left: 10px;
	display: flex;
	align-items: center;
}
.picker text{
	margin-left: 3px;
}
.picker .iconfont2{
	position: relative;
	top: -8rpx;
	color: #888;
	margin-left: 2px;
	font-size: 12px;
}

.nav-title{
	font-size: 20px;
	font-weight: bold;
	position: relative;
	top: -2px;
}

.address-btn{
	border: none;
	padding: 0;
	background: #fff;
	margin-top: 6px;
	font-size: 14px;
}
.address-btn:after{
	display: none;
}
.address-btn .iconfont{
	position: relative;
	top: 1px;
	margin-right: 4px;
}