.filter-tab{
    position: fixed;
    top: 100rpx;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-bottom: 1px solid #eaeaea;
    z-index: 30;
    display: flex;
}
.filter-tab view{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.filter-tab view text{
    margin-right: 6rpx;
    font-size: 32rpx;
}
.filter-tab image{
    width: 34rpx;
    height: 34rpx;
}