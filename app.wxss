@import 'styles/iconfont.wxss';
@import 'styles/flex.wxss';
@import 'styles/common.wxss';
@import 'styles/vant.wxss';

page{
    background: #f8f8f8;
    color: #333;
    font-size: 17px;
    font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
}
image{
    display: block;
    margin: 0;
    padding: 0;
}
view{
    box-sizing: border-box;
}

.subtitle{
    padding: 30rpx;
}

.icon{
    width: 36rpx;
    height: 36rpx;
}

/* label */
.label{
    display: inline-block;
    font-size: 28rpx;
    padding: 2rpx 10rpx;
    border-radius: 4rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.label-green{
    background: #e3f8f1;
    color: #5f9186;
}
.label-orange{
    background: #fcf1d5;
    color: #d4c199;
}



/* 按钮 */
.btn{
    border-radius: 10rpx;
    display: inline-block;
}
.btn.mini{
    padding: 4rpx 10rpx;
}
.btn-default{
    border: 1px solid #4c5ce3;
    color: #4c5ce3;
}

/* 表单 */
.form-item{
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    border-bottom: 1px solid #f8f8f8;
    padding: 0 30rpx;
    background: #fff;
}
.form-item label{
    line-height: 100rpx;
}
.form-item .form-content{
    width: 480rpx;
}
.form-item input, .form-item textarea{
    text-align: right;
    padding: 10rpx 0;
    width: 480rpx;
}
.form-item input{
    height: 100rpx;
    padding: 0;
}
.form-item textarea{
    min-height: 300rpx;
    padding-top: 26rpx;
}


/* 订单卡片 */
.order-card .sign-info{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
    color: #888;
    font-size: 16px;
}
.order-card .sign-info image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}
.order-card .sign-info .money{
    color: #4c5ce3;
}
.order-card .main-btn{
    width: 100%;
    margin: 30rpx 0;
}

/* 头部筛选tab */
.filter-tab{
    position: fixed;
    top: 100rpx;
    left: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-bottom: 1px solid #eaeaea;
    z-index: 30;
    display: flex;
}
.filter-tab view{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.filter-tab view text{
    margin-right: 6rpx;
    font-size: 32rpx;
}
.filter-tab image{
    width: 34rpx;
    height: 34rpx;
}


.single{
    background: #fff;
    border-bottom: 1px solid #eaeaea;
}

.main-btn{
    margin: 60rpx 30rpx;
    color: #fff;
    background: -webkit-linear-gradient(45deg, #7889f1, #4d5ef4);
    border-radius: 50rpx;
}


swiper{
    height: 400rpx;
}
.slide-image{
    width: 100%;
    height: 400rpx;
}

